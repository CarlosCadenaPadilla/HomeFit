<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="121dp"
        android:layout_marginBottom="772dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Formulario de registro"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RadioGroup
        android:id="@+id/rgGenero"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="227dp"

        android:layout_marginEnd="33dp"
        android:layout_marginBottom="670dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbFemenino"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_regular"
            android:text="Femenino"
            android:textSize="13dp" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbMasculino"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Masculino"
            android:textSize="13dp" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbOtro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Otro"
            android:textSize="13dp" />


    </RadioGroup>


    <TextView
        android:layout_width="297dp"
        android:layout_height="19dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="698dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="GÃ¨nero"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="279dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="588dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="90dp"
            android:layout_height="73dp"
            android:hint="00"
            app:helperText="Edad"
            app:helperTextTextAppearance="@style/FontFamily_montserratRegular"
            app:hintTextAppearance="@style/FontFamily_montserratRegular">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEdad"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:fontFamily="@font/montserrat_regular"
                android:inputType="number"
                android:maxLength="2" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="90dp"
            android:layout_height="73dp"
            android:layout_marginLeft="14dp"
            android:hint="Kg"
            app:helperText="Peso"
            app:helperTextTextAppearance="@style/FontFamily_montserratRegular"
            app:hintTextAppearance="@style/FontFamily_montserratRegular">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPeso"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:fontFamily="@font/montserrat_regular"
                android:inputType="number"
                android:maxLength="3" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="90dp"
            android:layout_height="73dp"
            android:layout_marginLeft="14dp"
            android:hint="Cm"
            app:helperText="Altura"
            app:helperTextTextAppearance="@style/FontFamily_montserratRegular"
            app:hintTextAppearance="@style/FontFamily_montserratRegular">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAltura"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:fontFamily="@font/montserrat_regular"
                android:inputType="number"
                android:maxLength="3" />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <TextView
        android:layout_width="297dp"
        android:layout_height="19dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="375dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="513dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Objetivo:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.595" />

    <RadioGroup
        android:id="@+id/rgObjetivo"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="409dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="482dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbBajarPeso"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="Bajar de Peso" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbTonificar"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="Tonificar" />

    </RadioGroup>

    <TextView
        android:layout_width="297dp"
        android:layout_height="19dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="376dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Nivel de intensidad:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/rgDificultad"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="530dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="356dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbDificultadAlta"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="Alto" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbDificultadMedia"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="Medio" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbDificultadBaja"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="Bajo" />

    </RadioGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEnviar"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="818dp"
        android:layout_marginBottom="240dp"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="@font/montserrat_bold"
        android:text="ENVIAR"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>