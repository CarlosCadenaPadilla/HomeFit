<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/AppBarPerfil"
            style="@style/Widget.MaterialComponents.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            app:menu="@menu/menu_perfil"
            app:title="Perfil"
            app:titleTextAppearance="@style/FontFamily_montserratSemiBold"
            app:titleTextColor="#707070" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="65dp"
            android:layout_height="63dp"
            android:layout_marginStart="147dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="147dp"
            android:layout_marginBottom="601dp"
            android:elevation="10dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageViewUsuario"
                android:layout_width="65dp"
                android:layout_height="63dp"
                android:background="@color/colorAccent"
                app:srcCompat="@drawable/female_user" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textViewNombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="127dp"
            android:layout_marginTop="147dp"
            android:layout_marginEnd="127dp"
            android:layout_marginBottom="570dp"
            android:fontFamily="@font/montserrat_bold"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="190dp"
            android:layout_marginEnd="114dp"
            android:layout_marginBottom="529dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Tu último registro"
            android:textColor="#4D4D4D"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:layout_width="337dp"
            android:layout_height="112dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="210dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="414dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="39dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="9dp"
                    android:src="@drawable/ic_timer" />

                <TextView
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="1 hora y 32 min"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="9dp"
                    android:src="@drawable/ic_whatshot" />

                <TextView
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="9dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="150 KAL"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="9dp"
                    android:src="@drawable/ic_circuits" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="9dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="5 Circuits"
                    android:textSize="12sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="357dp"
            android:layout_marginEnd="132dp"
            android:layout_marginBottom="333dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Última rutina realizada"
            android:textColor="#4D4D4D"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:layout_width="337dp"
            android:layout_height="112dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="438dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="278dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">




                <ImageView
                    android:layout_width="73dp"
                    android:layout_height="73dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="26dp"
                    android:src="@drawable/ic_circulo_azul" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="41dp"
                    android:layout_marginLeft="41dp"
                    android:layout_marginTop="42dp"
                    android:src="@drawable/ic_abs" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="53dp"
                android:layout_marginLeft="126dp"
                android:text="Ejercicios Abdominales"
                android:textSize="14dp"
                android:fontFamily="@font/montserrat_medium"/>


        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>